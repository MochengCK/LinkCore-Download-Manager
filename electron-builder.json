{
    "productName": "LinkCore Download Manager",
    "appId": "app.linkcore.native",
    "afterPack": "./build/afterPackHook.js",
    "afterSign": "./build/afterSignHook.js",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "fileAssociations": [
      {
        "ext": "torrent",
        "mimeType": "application/x-bittorrent",
        "name": "Torrent",
        "role": "Viewer"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/node-fetch/**/*",
      "**/node_modules/ws/**/*"
    ],
    "compression": "maximum",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "extensions/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "protocols": [
      {
        "name": "Motrix Protocol",
        "schemes": [
          "mo",
          "motrix"
        ]
      },
      {
        "name": "Magnet Protocol",
        "schemes": [
          "magnet"
        ]
      },
      {
        "name": "Thunder Protocol",
        "schemes": [
          "thunder"
        ]
      }
    ],
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 230,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 230,
          "type": "file"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "type": "development",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "notarize": false,
      "extraResources": {
        "from": "./extra/darwin/${arch}/",
        "to": "./",
        "filter": [
          "**/*"
        ]
      },
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./build/icon.ico",
      "extraResources": {
        "from": "./extra/win32/${arch}/",
        "to": "./",
        "filter": [
          "**/*"
        ]
      },
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "artifactName": "LinkCore.Download.Manager-Setup-${version}.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LinkCore Download Manager",
      "deleteAppDataOnUninstall": false
    },
    "appx": {
      "artifactName": "LinkCore.Download.Manager-${version}-${arch}.${ext}",
      "applicationId": "app.motrix.native",
      "identityName": "59744DrrOot.Motrix",
      "publisher": "CN=5BB4961D-30D8-4993-9ADF-05E1E1F5A395",
      "publisherDisplayName": "Dr_rOot"
    },
    "portable": {
      "artifactName": "LinkCore.Download.Manager-${version}-${arch}.${ext}"
    },
    "linux": {
      "category": "Network",
      "icon": "./static",
      "mimeTypes": [
        "application/x-bittorrent",
        "x-scheme-handler/magnet"
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extraResources": {
        "from": "./extra/linux/${arch}/",
        "to": "./",
        "filter": [
          "**/*"
        ]
      }
    },
    "publish": [
  {
    "provider": "github",
    "owner": "MochengCK",
    "repo": "LinkCore-Download-Manager"
  }
]
  }
